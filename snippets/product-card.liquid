<div class='tw-w-full tw-py-6 tw-px-3'>
    <div class='tw-border tw-bg-white tw-shadow-lg tw-rounded-lg tw-overflow-hidden'>
        <a href='{{ product_product.url }}'>
            {% if product_product.featured_image %}
                <div class='tw-h-80 tw-overflow-hidden'>
                    <img class='tw-w-full tw-h-full tw-object-cover tw-transition tw-duration-1000 tw-ease-in-out tw-hover:tw-scale-105 tw-transform'
                        src='{{ product_product.featured_image | image_url: width: 1000, height: 1000 }}'
                        alt='{{ product_product.featured_image.alt }}'>
                </div>
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'tw-w-full tw-h-full tw-object-cover tw-bg-gray-100' }}
            {% endif %}
        </a>

        <div class='tw-flex tw-flex-col tw-p-4'>
            <a href='{{ product_product.url }}' class='tw-text-gray-700 tw-font-medium'>
                {{ product_product.title }}
            </a>
            
            {% assign first_variant = product_product.variants.first %}
            <p>
                {{ product_product.title }} - {{ first_variant.price | money_without_currency | remove: '.00' }} USD
            </p>

            {% if product_product.variants.size > 1 %}
                {% assign second_variant = product_product.variants[1] %}
                <p>
                    {{ second_variant.title }} - {{ second_variant.price | money_without_currency | remove: '.00' }} USD
                </p>
            {% endif %}
        </div>
    </div>
</div>
