{% style %}
    .collection-c-1 {
        background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
        url({{ 'collection-c-1.png' |  asset_img_url: '1480x986' }});
        background-size: 150%;
        background-position: 50% 50%;
        background-repeat: no-repeat;
    }

    .collection-c-2 {
        background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
        url({{ 'collection-c-2.jpeg' |  asset_img_url: '1480x986' }});
        background-size: 100%;
        background-position: 50% 30%;
        background-repeat: no-repeat;
    }

    .collection-c-3 {
        background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
        url({{ 'collection-c-3.png' |  asset_img_url: '1480x986' }});
        background-size: 150%;
        background-position: 50% 50%;
        background-repeat: no-repeat;
    }

    .collection-c-4 {
        background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
        url({{ 'collection-c-4.jpeg' |  asset_img_url: '1480x986' }});
        background-size: 100%;
        background-position: 50% 30%;
        background-repeat: no-repeat;
    }

    .collection-c-5 {
        background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
        url({{ 'collection-c-5.png' |  asset_img_url: '1480x986' }});
        background-size: 145%;
        background-position: 50% 50%;
        background-repeat: no-repeat;
    }

    .collection-c-6 {
        background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
        url({{ 'collection-c-6.jpeg' |  asset_img_url: '1480x986' }});
        background-size: 100%;
        background-position: 50% 30%;
        background-repeat: no-repeat;
    }

    .btn-collection {
        color: #282828;
        font-family: 'causten';
        font-weight: 600;
        letter-spacing: 1px;
        font-size: 14px;
        line-height: 16.8px;
        border-radius: 6px;
    }

    @media (min-width: 1024px) {
        .collection-c-1 {
            background-size: 150%;
            background-position: 50% 50%;
        }

        .collection-c-2 {
            background-size: 150%;
            background-position: 50% 30%;
        }

        .collection-c-3 {
            background-size: 227%;
            background-position: 50% 50%;
        }

        .collection-c-4 {
            background-size: 100%;
            background-position: 50% 50%;
        }

        .collection-c-5 {
            background-size: 150%;
            background-position: 50% 30%;
        }

        .collection-c-6 {
            background-size: 150%;
            background-position: 50% 30%;
        }
    }

    {% endstyle %}

