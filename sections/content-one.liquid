{% style %}
    .tw-content-1-bg {
        background: url({{ 'white-berry.png' | asset_img_url: '3000x3000' }});
        background-color: #F6F0E4;
        background-position: 50% 40%;
        background-size: 200%;
    }

    @media (min-width: 768px) {
        .tw-content-1-bg {
            background-position: 50% 68%;
            background-size: 120%;
        }
    }
    @media (min-width: 1024px) {
        .tw-content-1-bg {
            background-position: 50% 68%;
            background-size: 130%;
        }
    }
{% endstyle %}

<section class="tw-h-auto tw-w-full tw-flex tw-justify-center tw-items-center tw-content-1-bg tw-relative -tw-z-30">
    <div
        class="tw-absolute tw-w-[150px] tw-lg:w-[100px] tw-h-[150px] tw-md:h-[250px] tw-bg-[#F6F0E4] tw-left-1/3 tw-md:left-[18%] tw-lg:left-[14%] tw-lg:h-[250px] tw-xl:hidden tw-z-0">
    </div>
    <div class="tw-flex tw-justify-center tw-w-full tw-py-[173px] tw-relative tw-z-0 tw-md:hidden">{% render 'm-content-1' %}</div>
    <div class="tw-hidden tw-justify-center tw-w-full tw-py-[240px] tw-relative -tw-z-10 tw-md:tw-flex tw-max-w-[1280px]">{% render 'd-content-1' %}</div>
</section>


